{
  "name": "playwright-e2e-tests",
  "version": "1.0.0",
  "description": "Playwright e2e tests with AI capabilities",
  "keywords": [
    "playwright",
    "playwright-e2e-tests"
  ],
  "license": "ISC",
  "author": "DanielT",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test:e2e": "npx playwright test --config=config/test.playwright.config.ts tests/e2e/nopcommerce.e2e.spec.ts --headed",
    "demo": "npx playwright test tests/demo/mytest.spec.ts --headed",
    "demotrace": "npx playwright test tests/demo/mytest.spec.ts --trace on",
    "demotag": "npx playwright test --grep @smoke --headed",
    "login": "npx playwright test tests/functional/login.spec.ts --headed",
    "runenv": "npx playwright test --config=config/test.playwright.config.ts tests/demo/runtest-from-environment.spec.ts --headed"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.10",
    "allure-playwright": "^3.4.5",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3"
  }
}
